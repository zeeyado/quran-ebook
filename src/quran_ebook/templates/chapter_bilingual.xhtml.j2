<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:epub="http://www.idpf.org/2007/ops" xml:lang="ar" lang="ar" dir="rtl">
<head>
    <meta charset="utf-8"/>
    <title>سورة {{ surah.name_arabic }} — {{ surah.name_transliteration }}</title>
    <link rel="stylesheet" type="text/css" href="styles/base.css"/>
</head>
<body>
    <table class="surah-header"><tr>
        <td class="header-info">Surah {{ surah.number }}</td>
        <td class="surah-name" id="surah-{{ surah.number }}"><span class="ornament">﴿</span> سورة {{ surah.name_arabic }} <span class="ornament">﴾</span><br/><span class="header-transliteration">{{ surah.name_transliteration }}</span></td>
        <td class="header-info">{{ surah.ayah_count }} Ayahs</td>
    </tr></table>
{%- if surah.has_bismillah and not surah.bismillah_is_first_ayah %}
    <table class="bismillah-table"><tr><td class="bismillah">{{ bismillah_text }}</td></tr></table>
{%- endif %}
{%- for ayah in surah.ayahs %}
{%- if ayah.page_marker %}<span epub:type="pagebreak" role="doc-pagebreak" id="page{{ ayah.page_marker }}" title="{{ ayah.page_marker }}"></span>{%- endif %}
    <div class="ayah-block">
        <p class="ayah-text" id="ayah-{{ surah.number }}-{{ ayah.ayah_number }}">{% if ayah.hizb_marker %}<span class="hizb-marker">۞</span> {% endif %}{{ ayah.text }}&#160;<span class="ayah-number">{{ ayah.ayah_number | arabic_numerals }}</span></p>
{%- if ayah.translation %}
        <p class="translation" lang="{{ translation_lang }}" dir="ltr">{{ ayah.translation }}</p>
{%- endif %}
    </div>
{%- endfor %}
</body>
</html>
